{% extends 'auth/base.html.twig' %}
{% import 'macros/assets.html.twig' as assets %}

{% block title %}Вход{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">Вход</h2>
                    
                    <div id="alert-container"></div>

                    <form id="login-form">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required autofocus>
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Пароль</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary" id="submit-btn">
                                <span id="submit-text">Войти</span>
                                <span id="submit-spinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <a href="{{ path('password_reset_init') }}" class="text-decoration-none">
                                Забыли пароль?
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ assets.js('login') }}
{% endblock %}

