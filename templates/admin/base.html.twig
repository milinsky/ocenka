{% import 'macros/assets.html.twig' as assets %}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Ocenka - Онлайн оценка{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
        }
        body {
            display: flex;
            flex-direction: column;
        }
        main {
            flex: 1 0 auto;
        }
        footer {
            flex-shrink: 0;
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">Ocenka</a>
            <div class="navbar-nav ms-auto">
                <span class="nav-link text-white">Панель администратора</span>
            </div>
        </div>
    </nav>

    <main class="py-4">
        {% block body %}{% endblock %}
    </main>

    <footer class="mt-auto py-4 bg-light">
        <div class="container text-center text-muted">
            <p class="mb-0">&copy; {{ 'now'|date('Y') }} Ocenka. Все права защищены.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>

